            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#00000080" />
                  <Stop color="#eeeeee" offset="1.0" />
               </stops>
            </LinearGradient>
         </fill>
        </Text>
        <Button layoutX="344.0" layoutY="410.0" mnemonicParsing="false" onMouseClicked="#exitDrawie" prefWidth="108.0" stylesheets="@../styles/button.css" text="Exit">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Button>
      <VBox layoutX="54.0" layoutY="-15.0" prefHeight="200.0" prefWidth="100.0" />
    </children>
</Pane>
