    <children>
        <Button layoutX="344.0" layoutY="300.0" mnemonicParsing="false" onMouseClicked="#createNewRoom" prefWidth="108.0" stylesheets="@../styles/button.css" text="New Room">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Button>
        <Button layoutX="344.0" layoutY="337.0" mnemonicParsing="false" onMouseClicked="#joinExistingRoom" prefWidth="108.0" stylesheets="@../styles/button.css" text="Join Room">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Button>
        <TextField fx:id="roomUrl" layoutX="216.0" layoutY="374.0" prefHeight="25.0" prefWidth="365.0" promptText="type url of existing drawie room" stylesheets="@../styles/text-field.css">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </TextField>
        <Text layoutX="257.0" layoutY="250.0" strokeType="OUTSIDE" strokeWidth="0.0" text="DRAWIE">
